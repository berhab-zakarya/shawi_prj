# Azure Environment Variables for Container Instances
# Copy this content to create .env.azure file

# Django Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=*

# Database (SQLite for simplicity)
DATABASE_URL=sqlite:///db.sqlite3

# Redis (Azure Cache for Redis - we'll create this)
REDIS_URL=redis://elshawi-redis.redis.cache.windows.net:6380/0?ssl=true&password=YOUR_REDIS_KEY

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Timezone Settings
TIME_ZONE=UTC
USE_TZ=True

# API Keys (replace with your actual keys)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOW_CREDENTIALS=True